      SO_PREFIX=""
      SO_EXT=".dll"
      IMPLIB_EXT=".lib"
      IMPLIB_PREFIX=""
    else 
      SO_PREFIX="cyg"
      SO_EXT=".dll"
      IMPLIB_EXT=".dll.a"
      IMPLIB_PREFIX="lib"
